.conversations
  %h1 New Conversation

  = form_for @conversation do |f|
    - if f.object.participant_ids.present?
      - f.object.participant_ids.each do |id|
        = hidden_field_tag 'conversation[participant_ids][]', id
    = fields_for :messages do |m|
      = m.text_area :content
    = f.submit 'Send Message', :class => 'btn'