- comment = form
- cancel_link ||= false
= form_for comment, :remote => true do |f|
  = f.hidden_field :parent_id
  .comment
    .left
      - if current_user.external_pic_url.blank?
        &nbsp;
      - else
        = image_tag current_user.external_pic_url, :style => 'width: 50px; height: 50px;'
    .left.content{:style => 'padding-left: 10px'}
      = f.hidden_field :checkin_id
      = f.text_area :content, :size => '50x1'
    .left{:style => 'padding: 11px 0 0 5px;'}= f.submit (comment.new_record? ? 'Post Comment' : 'Update'), :class => 'btn primary'
    .left{:style => 'padding: 15px 0 0 8px;'}
      - if comment.new_record? and cancel_link
        = link_to 'Cancel', '#', :onclick => "$('#comment_#{comment.parent_id} .new_comment').remove(); return false;"
      - elsif !comment.new_record?
        = link_to 'Cancel', cancel_edit_comment_path(comment), :remote => true
    .clear