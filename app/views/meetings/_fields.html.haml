.control-group{error_css(@meeting, :location_name)}
  = f.label :location_name, :class => 'control-label'
  .controls
    = f.text_field :location_name, :class => "span4"
    = f.semantic_errors :location_name
.control-group{error_css(@meeting, :day_of_week)}
  = f.label :day_of_week, :class => 'control-label'
  .controls
    = f.select :day_of_week, options_for_select(Meeting.days_of_week_arr, @meeting.day_of_week.to_i), :class => "span4"
    = f.semantic_errors :day_of_week
.control-group{error_css(@meeting, :start_time)}
  = f.label :start_time, :class => 'control-label'
  .controls
    = f.text_field :start_time, :maxlength => 4, :placeholder => '630', :class => "span1"
    = f.semantic_errors :start_time
.control-group{error_css(@meeting, :venue_name)}
  = f.label :venue_name, :class => 'control-label'
  .controls
    = f.text_field :venue_name, :class => "span4"
    = f.semantic_errors :venue_name
.control-group{error_css(@meeting, :venue_address)}
  = f.label :venue_address, :class => 'control-label'
  .controls
    = f.text_field :venue_address, :placeholder => 'Address, City, State/Province, Zip Code, Country', :class => "span4"
    = f.semantic_errors :venue_address
.control-group{error_css(@meeting, :venue_url)}
  = f.label :venue_url, 'Google Maps URL', :class => 'control-label'
  .controls
    = f.text_field :venue_url, :class => "span4"
    = f.semantic_errors :venue_url
.control-group{error_css(@meeting, :description)}
  = f.label :description, 'Description/Comments', :class => 'control-label'
  .controls
    = f.text_area :description, :size => '80x4', :class => "span4"
    = f.semantic_errors :description
.form-actions
  = f.submit "Save", :class => "btn btn-primary btn-large"