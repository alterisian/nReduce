- body_attrs :class => "apply"

- content_for :subtitle do
  New Location

.container
  .logo
  %h2 New Location

  .row
    .span12
      = semantic_form_for @location, :url => "/admin/locations", :method => :post, :html => {:class => "form-horizontal"} do |f|

        = render "admin/admin_locations/fields", :f => f

        .form-actions
          = f.submit "Save", :class => "btn btn-primary btn-large"