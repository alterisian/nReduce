- content_for :subtitle do
  #{@demo_day.name}

%center
  %h1 #{@demo_day.name} Companies

%br/
.relationships.row
  - @demo_day.startups.each do |s|
    - this_startup_url = demo_day_path(:id => s.to_param)
    - logo_path = s.logo_url(:square)
    - owner = (!current_user.startup_id.blank? && (s.id == current_user.startup_id))
    .team.span3{:align => 'center'}
      .top{:align => 'center', :onclick => "window.location = '#{this_startup_url}';"}
        .background{:style => "background-image: url('#{logo_path}'); cursor: pointer;"} &nbsp;
        .members{:align => 'center'}
          - s.team_members.shuffle.first(3).each do |tm|
            .inline-block{:style => 'margin-left: 4px'}= image_tag(user_avatar_url(tm), :title => tm.name, :style => 'width: 50px; height: 50px;')
      .bottom{:align => 'center'}
        %h3= link_to owner ? 'You' : truncate(s.name, :length => 20), this_startup_url
        - if owner
          = link_to 'Start Your Video Chat', this_startup_url, :class => 'btn btn-primary'
        - else
          = link_to 'Chat with Founders', this_startup_url, :class => 'btn btn-success'
%hr/
.row
  .span8
    %h2 Attendees
  .span4{:align => 'right'}
    %h3
      - if @demo_day.is_attendee?(current_user)
        You're Attending
      - else
        = link_to "I'm attending!", attend_demo_day_path(@demo_day), :method => :post, :class => 'btn'
.row
  .span12
    - @demo_day.attendees.each do |u|
      .left{:style => 'width: 50px; height: 50px; margin: 0 10px 10px 0;'}= link_to image_tag(user_avatar_url(u), :title => u.name, :alt => u.name), url_for_twitter(u.twitter), :target => '_blank'
    .clear