- body_attrs :class => "apply"

- content_for :subtitle do
  Edit your startup

.container
  = render 'layouts/nav'
  %h2 Edit your Startup

  .row
    .span12
      = semantic_form_for @startup, :html => {:class => "form-horizontal"} do |f|

        = render "startups/fields", :f => f

        .form-actions
          = f.submit "Save", :class => "btn btn-primary btn-large"
