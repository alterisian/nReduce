- comment = form
- cancel_link ||= false
= form_for comment, :remote => true do |f|
  .comment
    .content
      .left
        = f.hidden_field :checkin_id
        = f.text_area :content, :size => '50x1'
      .left{:style => 'padding-left: 5px;'}= f.submit (comment.new_record? ? 'Post Comment' : 'Update'), :class => 'btn primary'
      .left{:style => 'padding-left: 5px;'}
        - if comment.new_record? and cancel_link
          = link_to 'Cancel', '#', :id => "comment_cancel_link", :onclick => "$('#new_comment').hide(); return false;"
        - elsif !comment.new_record?
          = link_to 'Cancel', cancel_edit_comment_path(comment), :remote => true
      .clear