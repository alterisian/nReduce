- @num_checkins ||= @startup.checkins.count
- @num_awesomes ||= @startup.awesomes.count
.row
  .span12.well{:style => 'padding: 0'}
    .row{:style => 'padding: 19px'}
      .span3
        - vid_url = Youtube.embed_url(@startup.intro_video_url)
        - if vid_url.blank?
          [ no intro video ]
        - else
          %iframe{:width => '250', :height => '188', :src => vid_url, :frameborder => 0, :allowfullscreen => true}
      .span5
        %h1= h(@startup.name)
        - unless @startup.one_liner.blank?
          %h3= h(@startup.one_liner)
        - unless @startup.website_url_to_uri.blank?
          %h3
            %small= link_to_external @startup.website_url_to_uri.hostname, @startup.website_url
        .row
          .span2
            - unless @startup.company_goal.blank?
              %p
                %small Goal: #{Startup.company_goals[@startup.company_goal.to_i]}
            %p
              %small Industry: #{h(@startup.industry_list)}
            %p
              Checkins:
              %span.badge.badge-warning #{@num_checkins}
          .span2
            - unless @startup.stage.blank?
              %p
                %small Idea Stage: #{Startup.stages[@startup.stage.to_i]}
            - unless @startup.growth_model.blank?
              %p
                %small Growth Model: #{Startup.growth_models[@startup.growth_model.to_i]}
            %p
              Awesomes:
              %span.badge.badge-warning #{@num_awesomes}
      .span3
        != rating_link(@startup)
        %br/
        %p
          %small Elevator Pitch
        %p= simple_format(h(@startup.elevator_pitch))
  
.row
  .span12
    %h4
      %small Team #{h(@startup.name)}
    %hr
    %br
.row
  .span12
    = render 'startups/team_members', :team_members => @startup.team_members, :add_team_member => user_signed_in? && (@startup.id == current_user.startup_id ? true : false)
    %hr
    %br
- mentors = @startup.connected_to('User')
- if mentors.size > 0
  .row
    .span12
      %hr
      %br
      %h4
        %small #{h(@startup.name).possessive} Mentors
      %br/
      %hr
      %br/
  .row
    .span12
      = render 'startups/team_members', :team_members => mentors
      %hr
      %br