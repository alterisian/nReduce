%h2 Class of #{@weekly_class.description}

.left
  #world_map
.left
  .well
    .row
      .span1.center
        %h2= @weekly_class.num_startups
        Startups
      .span1.center
        %h2= @weekly_class.num_users
        Founders
    .row
      .span1.center
        %h2= @weekly_class.num_countries
        Countries
      .span1.center
        %h2= @weekly_class.num_industries
        Industries
    .row
      .span2.center{:style => 'margin-top: 15px'}= link_to 'Join Now!', '#', :class => 'btn btn-large btn-success', :style => 'font-size: 2em'
.clear

:javascript
  points = #{@weekly_class.clusters.map{|c| {:num_users => c.user_ids.size, :lat => c.lat, :lng => c.lng, :location => c.location} }.to_json};
  wm = new WorldMap('world_map', points);
  wm.render();