- content_for :subtitle do
  Discover Startups

= form_tag search_startups_path, :html => {:class => 'form-inline'} do
  .row
    .span2{:align => 'right'}
      %p &nbsp;
      %h4 Search Startups:
    .span3
      %p
        %small Startup Name
      = text_field_tag 'search[name]', @search[:name], :class => 'input-large'
    .span3
      %p
        %small Meeting Location
      = select_tag 'search[meeting_id]', options_for_select(Meeting.select_options, @search[:meeting_id]), :class => 'input-large', :include_blank => true
    .span3
      %p
        %small Markets (coming soon)
      = select_tag 'search[name]', options_for_select([], @search[:industry]), :class => 'input-large', :include_blank => true
    .span1
      %p &nbsp;
      = submit_tag 'Search', :class => 'btn'

- if @startups.size > 0
  .row
    .span1
      %p &nbsp;
    .span11
      %h2 #{pluralize(@startups.total_entries, 'startup')}:

  - @startups.each do |s|
    .row{:id => "startup_#{s.id}"}
      .span1
        %p &nbsp;
      .span3
        - vid_url = Youtube.embed_url(s.intro_video_url)
        - if vid_url.blank?
          %h4 [No intro video]
        - else
          %iframe{:width => '250', :height => '188', :src => vid_url, :frameborder => 0, :allowfullscreen => true}
      .span5
        %h2
          = s.name
          - unless s.website_url.blank?
            %small
              \-
              #{s.website_url}
        %h3 #{s.one_liner}
        .row
          .span2
            %p Goal: #{s.company_goal}
            %p Meeting: #{!s.meeting_id.blank? ? s.meeting.location_name : 'none'}
            %p Team: ..[pics here]..
          .span2
            %p Idea Stage: #{s.stage}
            %p Industry: #{s.industry_list}
      .span3.relationship
        = button_to 'Invite to Group', relationships_path(:startup_id => s.id), :class => 'btn btn-large btn-info', :remote => true
    %hr
    %br

  = will_paginate @startups
- else
  %h4 No startups matched your search

= content_for :js do
  :plain
    <script type="text/javascript" charset="utf-8">
      jQuery(document).ready(function($) {
        $("#startupTable").tablesorter({
          textExtraction: function(node) {
            var val = $(node).data("val");
            if(val) {
              return val;
            }
            else {
              return $(node).text();
            }
          }
        });

        $("#view").on("change", function(e) {
          var view = $(this);
          window.location = "/admin/startups?view="+view.val();
        });
      });
    </script>
