- startup ||= nil
- next_after_checkin = Week.next_window_for(:after_checkin)
.countdown
  - unless startup.blank?
    - current_checkin = startup.current_checkin
    - if current_checkin.present?
      - if Checkin.in_after_time_window?
        .right.time_left= hours_minutes_until(next_after_checkin.last)
      .left.team_details
        .week Team #{startup.name}
        - startup.team_members.each do |tm|
          .team_member.left= image_tag tm.pic_url(:small)
      .left.goal_details
        .week Goal For Week Of #{current_checkin.time_label}:
        .goal #{current_checkin.start_focus}
      .clear
      .timeline
        .nav
          .navbar
            .navbar-inner
              %ul.nav
                - 6.downto(1) do |i|
                  - past = Time.now > (next_after_checkin.first - (i + 1).days)
                  %li.day{:class => past ? 'past' : 'future'}= link_to pluralize(i, 'Day'), '#'
                  %li.divider-vertical{:class => past ? 'past' : 'future'}
                %li.day
              .progress
                .bar{:style => "width: #{Checkin.pct_complete_week}%;"}
              .checkin_btn
                - if Checkin.in_after_time_window?
                  .active= link_to 'Check In', edit_checkin_path(current_checkin), :class => "btn btn-large btn-warning"
                - else
                  = link_to 'Keep Working', '#', :class => "btn btn-large disabled", :onclick => "return false"
.countdown_separator

