.row
  .footer.span12
    %center
      = link_to "Home", home_path
      = link_to "Investors", public_investors_path
      = link_to "Mentors", public_mentors_path
      = link_to "Journalists", public_press_path
      = link_to "nStar", '/d'
      = link_to "Team", team_path
      = link_to 'Blog', "http://blog.nreduce.com"
      - if user_signed_in?
        = link_to 'Tutorial', tutorial_path
    %br/
    %br/
    %br/
    
- if user_signed_in? && @weekly_class.blank? && !@setup
  .row.center
    %center
      .coworking_location_tab
        = link_to "Working At #{Settings.coworking_locations.uptown_espresso.name}, #{Settings.coworking_locations.uptown_espresso.location}", '#', :onclick => "$('.coworking_location_modal').modal(); return false;"

      .coworking_location_modal.modal.hide
        .modal-header
          %button.close{:type => 'button', 'data-dismiss' => 'modal'} x
          %h1= Settings.coworking_locations.uptown_espresso.name
        .modal-body
          %p
            %strong= Settings.coworking_locations.uptown_espresso.location
          %p= link_to_twitter Settings.coworking_locations.uptown_espresso.twitter, :target => '_blank'
          %p= link_to Settings.coworking_locations.uptown_espresso.url, Settings.coworking_locations.uptown_espresso.url, :target => '_blank'
          :plain
            <iframe width="535" height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="#{Settings.coworking_locations.uptown_espresso.map_url}"></iframe>