<div class="row">
  <div class="span8">
    <h1>Locations</h1>
  </div>
</div>

<br>
<div class="row">
  <div class="span7">
    <table id="locationsTable" class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="">Location</th>
          <th class="span1">RSVP Count</th>
        </tr>
      </thead>

      <tbody>

        <% @meetings.each do |meeting| %>
          <tr>
            <td>
              <%= meeting.location_name %>
              (<%= link_to "edit", "/admin/meetings/#{meeting.id}/edit" %>)
            </td>
            <td>
              <%= link_to location.authentications.count, "/admin/rsvps?location=#{location.id}" %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>
<div>
  <%= link_to "New Location", "/admin/locations/new", :class => "new-location btn btn-primary" %>
</div>
<% content_for :js do %>
  <script type="text/javascript" charset="utf-8">
    jQuery(document).ready(function($) {
      $("#locationsTable").tablesorter();
    });
  </script>
<% end -%>
